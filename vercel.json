{
  "outputDirectory": "public",
  "functions": {
    "api/index.js": {
      "includeFiles": "{dist/**,data/**,docs/**,node_modules/swagger-ui-dist/**}"
    }
  },
  "rewrites": [
    {
      "source": "/api-docs.json",
      "destination": "/api/index.js"
    },
    {
      "source": "/api-docs/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/api-docs",
      "destination": "/api/index.js"
    },
    {
      "source": "/health",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
